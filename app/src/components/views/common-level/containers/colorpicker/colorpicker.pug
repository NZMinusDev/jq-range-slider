include ~@views/common-level/primitives/slider/slider.pug

//- 
  Tip: mixin also uses 'and attributes'(&attributes)
mixin colorpicker
  -
    const sliderOptions = {
      orientation: 'vertical',
      intervals: { min: 0, max: 255 },
      start: [127],
      connect: [true, false],
      tooltips: false,
      pips: { isHidden: true },
    };
    const colors = ['red', 'green', 'blue'];
  .colorpicker.js-colorpicker&attributes(attributes)
    .colorpicker__sliders
      each color in colors
        .colorpicker__slider.js-colorpicker__slider(title=color)
          +slider({ options: sliderOptions, color, isSwitchableTooltips: true })
    .colorpicker__result.js-colorpicker__result(title="color") Color
