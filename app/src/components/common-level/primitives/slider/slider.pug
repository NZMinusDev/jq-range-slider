//- 
  options?: see /readme.md
  color?: 'red' | 'green' | 'blue' - color of slider bar
  isSwitchableTooltips?: boolean - should tooltips be switchable
  Tip: mixin also uses 'and attributes'(&attributes)
mixin slider({ options = {}, color = undefined, isSwitchableTooltips = false } = {})
  -
    options.formatter = options.formatter && `${options.formatter}`;

    const colorClass = color && `slider_color_${color}`;
    const colorIsSwitchableTooltips = isSwitchableTooltips && 'slider_with-switchable-tooltips';
  .slider.js-slider(
    class=[colorClass, colorIsSwitchableTooltips],
    data-options=options
  )&attributes(attributes)
